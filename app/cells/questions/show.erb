<h5><b>Domande di verifica</b></h5>
<table >
  <col width="50%">
  <col width="50%">
  <thead>
  <tr>
    <th>Domanda</th>
    <th>Risposte</th>
  </tr>
  </thead>

  <tbody>
  <%  planning.questions.each do |question| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric">
          <%= question.text %>
        </td>

        <td>
          <%= short_answers(question) %>
        </td>


          <% if is_not_active(planning.plan) %>
            <td>

              <%= link_to question_path(question), method: 'delete',
                          data: {confirm: 'Sei sicuro di voler eliminare l\'orario?'} do %>
                <button class="btn btn-danger btn-sm">
                  <i class="material-icons">delete</i>&nbsp Elimina
                </button>
              <% end %>
            </td>
          <% end %>

      </tr>
  <% end %>

  </tbody>
</table>



