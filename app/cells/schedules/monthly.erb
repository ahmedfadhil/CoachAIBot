<table>
  <thead>
  <tr>
    <th>Data</th>
    <% unless planning.schedules.first.time.nil? %>
        <th>Ora</th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% planning.schedules.each do |schedule| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= schedule.date.strftime('%m/%d/%Y') %></td>
        <% unless schedule.time.nil? %>
            <td><%= schedule.time.strftime('%H:%M') %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>