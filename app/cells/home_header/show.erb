<div class="android-header mdl-layout__header mdl-layout__header--waterfall">
  <div class="mdl-layout__header-row">


      <%= link_to home_index_path do %>
        <%= image_tag 'CoachAI Graphics/CoachAI_logo.png', class: 'android-logo-image outer' %>
      <% end %>


    <!-- Add spacer, to align navigation to the right in desktop -->
    <div class="android-header-spacer mdl-layout-spacer"></div>

    <!-- Navigation -->
    <div class="android-navigation-container">
      <nav class="android-navigation mdl-navigation">
        <%= link_to static_pages_about_path, class: 'mdl-navigation__link mdl-typography--text-uppercase' do %>
            Scopri di piu'
        <% end %>
        <%= link_to static_pages_help_path, class: 'mdl-navigation__link mdl-typography--text-uppercase' do %>
            Aiuto
        <% end %>


        <% if coach_user_signed_in? %>
            <%= link_to profile_index_path, class: 'mdl-navigation__link mdl-typography--text-uppercase' do %>
                Dashboard
            <% end %>
        <% else %>
            <%= link_to '', id: 'btn_login_2', class: 'mdl-navigation__link mdl-typography--text-uppercase' do %>
                Login
            <% end %>
        <% end %>

      </nav>
    </div>
  </div>
</div>