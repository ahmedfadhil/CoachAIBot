



<div class="card card-profile user_card">
  <div class="card-avatar">
    <%= image_tag profile_photo_url, alt: 'paziente', class: 'img' %>
  </div>
  <div class="col-md-12">
    <div class="card card-plain">
      <div class="card-header" data-background-color="orange">
        <h4 class="title"><%= "#{user.last_name} #{user.first_name}" %></h4>
        <p class="category">Profilo del paziente</p>
        <p> Registrato a: <%= user.created_at.strftime("%d %b. %Y") %></p>
      </div>
      <div class="card-content table-responsive">
        <table class="table table-hover">
          <thead>
          <th><i id="cake" class="material-icons">cake</i>
            <!-- Multiline Tooltip -->
<!--            <div id="cake" class="icon material-icons">share</div>-->
            <div class="mdl-tooltip mdl-tooltip--left" for="cake" >Et√°</div>
          </th>
          <th><%= user.age %></th>
          </thead>
          <tbody>
          <tr>
            <td> <i class="material-icons" id="wc">wc</i>
              <div class="mdl-tooltip mdl-tooltip--left" for="wc" >Sesso</div>
            </td>
            <td><%= user.gender %></td>
          </tr>
          <tr>
            <% if user.patient_objective == nil %>
              <td>Obiettivo del paziente</td>
              <td>Non assegnato</td>
            <% else %>
              <td><i class="material-icons" id="golf_course" >golf_course</i><div class="mdl-tooltip mdl-tooltip--left" for="golf_course" >Obbiettivo</div></td>
              <td><%= user.patient_objective %></td>
            <% end %>
          </tr>


          <tr>
            <td><i class="material-icons" id="phone" >phone</i><div class="mdl-tooltip mdl-tooltip--left" for="phone" >Telefono</div></td>
            <td><%= user.cellphone %></td>
          </tr>
          <tr>
            <td> <i class="material-icons" id="mail" >mail</i><div class="mdl-tooltip mdl-tooltip--left" for="mail" >Email</div></td>
            <td><%= user.email %></td>
          </tr>
          <tr>
            <td> <i class="material-icons" id="watch" >watch</i><div class="mdl-tooltip mdl-tooltip--left" for="watch" >Indossabile</div></td>
            <% if user.fitbit_status = "fitbit_disabled" %>
              <td>Disabilitato</td>
            <% elsif user.fitbit_status = "fitbit_invited" %>
              <td>invitato</td>
            <% else %>
              <td>abilitato</td>
            <% end %>

          </tr>
          <tr>
            <td> <i class="material-icons" id="border_vertical" >border_vertical</i><div class="mdl-tooltip mdl-tooltip--left" for="border_vertical" >Altezza</div></td>
            <td><%= "#{user.height} CM"%></td>
          </tr>
          <tr>
            <td> <i class="material-icons" id="slow_motion_video" >slow_motion_video</i><div class="mdl-tooltip mdl-tooltip--left" for="slow_motion_video" >Peso</div></td>
            <td><%= "#{user.weight} KG"%></td>
          </tr>
          <tr>
            <td><i class="material-icons" id="add_location" >add_location</i><div class="mdl-tooltip mdl-tooltip--left" for="add_location" >Gruppo sanguigno</div></td>
            <td><%= user.blood_type %></td>
          </tr>




          <% unless user.py_cluster.nil? %>
            <tr>

              <td><i class="material-icons" id="directions_run" >directions_run</i><div class="mdl-tooltip mdl-tooltip--left" for="directions_run" >Tipologia
                di utente</div></td>
              <td class="font_style"><%= cluster %></td>
            </tr>
            <% else%>
            <tr>

              <td><i class="material-icons" id="directions_run">directions_run</i>
                <div class="mdl-tooltip mdl-tooltip--left" for="directions_run">Tipologia
                  di utente
                </div>
              </td>
              <td class="font_style">Non assegnato</td>
            </tr>
          <% end %>

          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>


