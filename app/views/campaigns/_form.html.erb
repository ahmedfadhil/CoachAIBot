<%= form_with(model: campaign, local: true) do |form| %>
	<% if campaign.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

			<ul>
				<% campaign.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
    <div class="alert alert-success" role="alert">
      Quando crei una campagna, devi scegliere i TAG alla quale vuoi che sia inviata.
    </div>
    <ul class="list-group" style="clear: both; display: block; content: '';">
      <% if ActsAsTaggableOn::Tag.count == 0 %>
          <li class="list-group-item list-group-item-success" >Non sono ancora presenti TAG nel sistema. Inizia ad inserirne con questo nuovo paziente.</li>
      <% else %>
          <% ActsAsTaggableOn::Tag.all.each do |tag| %>
              <li class="list-group-item list-group-item-success" style="float: left; margin-right: 7px; margin-bottom: 7px;"><%= tag.name %></li>
          <% end %>
      <% end %>
    </ul>
  </div>

  <div class="form-group">
    <%= form.text_field :tag_list, class: 'form-control', placeholder: 'Inserisci qui i TAG separati da virgola', value: campaign.tag_list.to_s %>
  </div>

	<div class="form-group">
		<label>Questionario</label>
		<%= form.select(:questionnaire_id, Questionnaire.all.collect {|a| [a.title, a.id]}, {}, class: "form-control") %>
	</div>

	<div class="actions">
		<%= form.submit "Crea indagine", class: "btn btn-success" %>
	</div>
<% end %>
