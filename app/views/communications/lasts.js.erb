$('document').ready(function() {
    <% unless @communications.empty? %>
    $("li:has('div'):contains('Vedi tutte le notifiche')").remove();
    $("li:has('div'):contains('Non hai nessuna nuova notifica')").remove();
    $('#communications').append("<%= escape_javascript(render 'communications/communications_list') %>");
    $('#communications-badge').attr('data-badge', <%= @communications.where(:read_at => nil).count %>);
    <% end %>
    CommunicationsPooler.pool();
});
