
<div class="col-lg-12 col-lg-offset-4" id="activity-insert-card-wide">
  <div class="card" id="assign_table">
    <div class="card-header" data-background-color="purple">
      <h4 class="title">Scegli un'attivit√† gia presente nel sistema</h4>
      <p class="category"></p>
    </div>
    <div class="card-content table-responsive">
      <table class="table table-hover content_align">
        <thead class="text-warning">
        <th>Nome</th>
        <th>Categoria</th>
        <th>Modifica</th>
        <th>Assegna</th>
        </thead>
        <tbody>

        <% @activities.each do |a| %>
          <tr>
            <td><%= a.name %> </td>
            <td><%= match_category(a.category) %></td>
            <td><%= link_to 'Modifica', activity_path(a), class: 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'Assegna', plannings_path(:a_id => a.id, :p_id => @plan_id, :u_id => @user_id),
                            method: 'post', class: 'btn btn-success btn-sm' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>