<% provide(:sub_title, "Patients") %>

<div>
  <div>

    <header class="profile_content_header mdl-layout__header">

      <div class="mdl-layout__header-row">
        <nav class="mdl-navigation" >

          <%= link_to users_index_path, remote: true, id: 'all_users', class: 'mdl-navigation__link' do %>
              <button class="mdl-button mdl-js-button mdl-button--raised">
                <i class="material-icons">supervisor_account</i> &nbsp Tutti
              </button>
          <% end %>

          <%= link_to users_active_path, remote: true, class: 'mdl-navigation__link' do %>
              <button id="active-users" class="mdl-button mdl-js-button mdl-button--raised" >
                <i class="material-icons">insert_emoticon</i> &nbsp Attivi
              </button>
          <% end %>

          <%= link_to users_suspended_path, remote: true, id: 'suspended_users', class: 'mdl-navigation__link' do %>
              <button class="mdl-button mdl-js-button mdl-button--raised" >
                <i class="material-icons">block</i> &nbsp Sospesi
              </button>
          <% end %>

          <%= link_to users_archived_path, remote: true, id: 'archived_users', class: 'mdl-navigation__link' do %>
              <button class="mdl-button mdl-js-button mdl-button--raised" >
                <i class="material-icons">check_circle</i> &nbsp Archiviati
              </button>
          <% end %>

        </nav>
      </div>
    </header>

    <div id="patients">
      <div class="mdl-grid" >

        <div class="new-patient-card patient-card mdl-cell--3-col-desktop mdl-cell--6-col-tablet mdl-cell--12-col-phone mdl-card mdl-shadow--2dp">
          <div class="mdl-card__media">
            <%= image_tag 'sport_run.jpg', alt: 'nuovo_utente' %>
          </div>
          <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">Nuovo Paziente</h2>
          </div>
          <div class="mdl-card__supporting-text">
            Entra qui pe rinserire un nuovo paziente
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= link_to users_new_path, class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' do %>
                Inserisci
            <% end %>
          </div>
        </div>

        <% @users.each do |user|  %>
            <div class="active-patient-card patient-card mdl-cell--3-col-desktop mdl-cell--6-col-tablet mdl-cell--12-col-phone mdl-card mdl-shadow--2dp">
              <div class="mdl-card__media">
                <%= image_tag 'patient-conn.jpg', alt: 'paziente' %>
              </div>
              <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text"> <%= user.first_name %> <%= user.last_name %> </h2>
              </div>
              <div class="mdl-card__supporting-text">
                Dati sul Utente
              </div>
              <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                  Vedi pagina Utente
                </a>
              </div>
            </div>
        <% end %>

      </div>
    </div>

  </div>
</div>
