<% provide(:sub_title, 'Patients') %>

<div>
  <%= render 'users/users_header' %>

  <div id="patients">
    <div class="mdl-grid" >

      <% if @users.empty? %>
          <div class="mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--12-col-phone mdl-card mdl-shadow--2dp">
            <h2>
              Non e' presente nessun paziente per il momento.
              Inserisci un nuovo paziente attraverso il bottone in alto a destra.
            </h2>
          </div>
      <% end %>

      <% @users.each do |user|  %>
          <div class="active-patient-card patient-card mdl-cell--3-col-desktop mdl-cell--6-col-tablet mdl-cell--12-col-phone mdl-card mdl-shadow--2dp">
            <div class="mdl-card__media">
              <%= image_tag 'patient-conn.jpg', alt: 'paziente' %>
            </div>
            <div class="mdl-card__title mdl-card--expand">
              <h2 class="mdl-card__title-text"> <%= user.first_name %> <%= user.last_name %> </h2>
            </div>
            <div class="mdl-card__supporting-text">
              Dati sul Utente
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <%= link_to 'Vedi Pagina Utente', user_path(user), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
            </div>

          </div>
      <% end %>

    </div>
  </div>

</div>
