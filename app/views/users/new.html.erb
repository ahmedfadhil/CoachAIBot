<% provide(:sub_title, "Nuovo Paziente") %>

<div id ="mycard">

  <div class="patient-insert-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Inserisci qui i dati del paziente che vuoi inserire</h2>
    </div>


    <div class="mdl-card__supporting-text">
      Tutti i campi sono obbligatori!
      <div class="insert-error-msg"><%= yield(:insert_error_msg) %></div>
      <%= form_for @user, url: users_edit_path do |f| %>

          <div id="name">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_field :last_name, class: 'mdl-textfield__input'%>
              <%= label_tag :last_name, 'Nome', class:'mdl-textfield__label' %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_field :first_name, class: 'mdl-textfield__input'%>
              <%= label_tag :first_name, 'Cognome', class:'mdl-textfield__label' %>
            </div>
          </div>

          <div id ="contact">
            <div id="phone">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <%= f.text_field :cellphone, class: 'mdl-textfield__input', pattern: '-?[0-9]*(\.[0-9]+)?' %>
                <%= label_tag :cellphone, 'Numero di celulare', class:'mdl-textfield__label' %>
                <span class="mdl-textfield__error">Deve essere formato da numeri e non lettere!</span>
              </div>
            </div>

            <div id="email">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <%= f.text_field :email, class: 'mdl-textfield__input', type: 'email' %>
                <%= label_tag :email, 'Email', class:'mdl-textfield__label',  pattern: '/\A[\w+\-.]+@[a-z\d\-.]+\.[a-z]+\z/i' %>
                <span class="mdl-textfield__error">Inserire un indirizzo email valido!</span>
              </div>
            </div>

          </div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" type="submit">
            <i class="material-icons">add</i>Inserisci
          </button>
      <% end %>
    </div>
  </div>
</div>