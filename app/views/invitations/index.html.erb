<% if @campaigns.nil? %>
  Non ci sono campagne
<% else %>
  <table>
    <thead>
    <tr>
      <th>Nome Campagna</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @campaigns.each do |c| %>
      <tr>
        <td><%= c %></td>
        <td><%= link_to 'Show', invitation_path(id: 0, title: c) %></td>
        <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

<% end %>

<%= link_to 'New Invitation', new_invitation_path %>