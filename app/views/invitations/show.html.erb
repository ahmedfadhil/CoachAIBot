<%= cell(:navigation, {email: current_user.email, title: "Benvenuto utente"}.to_dot.freeze).(:navigation) do %>
	<% capture do %>
		<%= render "layouts/notice" %>
		<div style="padding-bottom: 25px;">
			<nav aria-label="breadcrumb" role="navigation">
				<ol class="breadcrumb">
					<li class="breadcrumb-item active" aria-current="page">
						<%= link_to "Indagini", campaigns_path %>
					</li>
					<li class="breadcrumb-item active" aria-current="page">
						<%= link_to(@invitation.campaign.questionnaire.title + " del " + l(@invitation.campaign.created_at, format: :long), campaign_path(@invitation.campaign))%>
					</li>
					<li class="breadcrumb-item active" aria-current="page">
						<%= @invitation.patient.name + " " + @invitation.patient.surname %>
					</li>
				</ol>
			</nav>
		</div>
		<table class="table">
			<thead class="thead-light">
				<tr>
					<th>#</th>
					<th>Domanda</th>
					<th>Risposta</th>
				</tr>
			</thead>
			<tbody>
				<% @invitation.answers.each_with_index do |answer, index| %>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= answer.question.text %></td>
					<td><%= answer.text %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
<% end %>
