$('document').ready(function() {
    <% unless @chat.text.empty? %>
      var chats_list = $('#chats');
      chats_list.append("<%= escape_javascript(render 'chats/message') %>");
      chats_list.animate({scrollTop: chats_list.prop("scrollHeight")}, 500);
      $('#message-box').val('');
    <% end %>
});