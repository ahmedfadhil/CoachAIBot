<div class="row">
  <div class="col-lg-12 col-md-12">
    <div class="card card-nav-tabs">
      <div class="card-header" data-background-color="purple">
        <div class="nav-tabs-navigation">
          <div class="nav-tabs-wrapper">
            <span class="nav-tabs-title">Tutte le attivita presenti nel sistema:</span>
            <ul class="nav nav-tabs" data-tabs="tabs">
              <li class="active">
                <a href="#profile" data-toggle="tab">
                  <i class="material-icons">bug_report</i> Elenco delle attività
                  <div class="ripple-container"></div>
                </a>
              </li>
              <li class="">
                <a href="#messages" data-toggle="tab">
                  <i class="material-icons">code</i> Categoria di attività
                  <div class="ripple-container"></div>
                </a>
              </li>
              <li class="">
                <a href="#settings" data-toggle="tab">
                  <i class="material-icons">cloud</i> Tipo di attività
                  <div class="ripple-container"></div>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="card-content">
        <div class="tab-content">
          <div class="tab-pane active" id="profile">
            <table class="table card-content content_align table-responsive table-hover">
              <thead class="text-warning">
              <th>Nome Attività</th>
              <th>Categoria</th>
              <th>Tipologia</th>
              <th>Modifica</th>
              <th>Elimina</th>
              </thead>
              <tbody>
              <% @activities.each do |a| %>
                <tr>
                  <td><%= a.name %></td>
                  <td> <%= match_category(a.category) %> </td>
                  <td> <%= match_a_type(a.a_type) %> </td>
                  <td> <%= link_to activity_path(a), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' do %>
                      <button class="btn btn-sm btn-success">
                        <i class="material-icons">important_devices</i> &nbsp Modifica
                      </button>
                    <% end %> </td>
                  <td> <%= link_to activity_path(a), method: 'delete',
                                   data: {confirm: 'Sei sicuro di voler eliminare l\'attivita\'? L\'attivita\'
                                   potrebbe essere gia\' stata assegnata ad un paziente!'} do %>
                      <button class="btn btn-sm btn-danger">
                        <i class="material-icons">delete</i> &nbsp Elimina
                      </button>
                    <% end %> </td>


                  </td>
                </tr>
              <% end %>

              </tbody>
            </table>
          </div>
          <% @activities.each do |a| %>
            <div class="tab-pane " id="messages">
              <table class="table table-responsive table-hover content_align">
                <tbody>
                <tr>
                  <td>
                    <div class="checkbox">
                      <label>
                        <%= match_category(a.category)%>
                      </label>
                    </div>
                  </td>
                  <td>
                    <button class="btn btn-info btn-fab btn-round">
                      <%= Activity.count(a.category) %></button>
                  </td>
                  <td class="td-actions text-right">
                    <%= link_to activity_path(a) do %>
                                        <button type="button" rel="tooltip" title="Modifica attività" class="btn btn-warning btn-fab btn-round">
                                          <i class="material-icons">edit</i>
                                        </button>
                                        <%end %>
                    <%= link_to activity_path(a), method: 'delete',
                                data: {confirm: 'Sei sicuro di voler eliminare l\'attivita\'? L\'attivita\'
                                   potrebbe essere gia\' stata assegnata ad un paziente!'} do %>
                    <button type="button" rel="tooltip" title="Elimina attività" class="btn btn-danger btn-fab btn-round">
                      <i class="material-icons">close</i>
                    </button>
                    <%end %>
                  </td>
                </tr>

                </tbody>
              </table>
            </div>
          <% end %>
          <% @activities.each do |a| %>
          <div class="tab-pane" id="settings">
            <table class="table table-responsive table-hover content_align">
              <tbody>
              <tr>
                <td>
                  <div class="checkbox">
                    <label>
                      <%= match_a_type(a.a_type) %>
                    </label>
                  </div>
                </td>
                <td>
                  <button class="btn btn-info btn-fab btn-round">
                    <%= Activity.count(a.a_type) %></button>
                </td>
                <td class="td-actions text-right">
                  <%= link_to activity_path(a) do %>
                    <button type="button" rel="tooltip" title="Modifica attività" class="btn btn-warning btn-fab btn-round">
                      <i class="material-icons">edit</i>
                    </button>
                  <%end %>
                  <%= link_to activity_path(a), method: 'delete',
                              data: {confirm: 'Sei sicuro di voler eliminare l\'attivita\'? L\'attivita\'
                                   potrebbe essere gia\' stata assegnata ad un paziente!'} do %>
                    <button type="button" rel="tooltip" title="Elimina attività" class="btn btn-danger btn-fab btn-round">
                      <i class="material-icons">close</i>
                    </button>
                  <%end %>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>





