  <%= form_for(resource, as: resource_name, url: coach_user_registration_path(@resource), html: { method: :PATCH }) do
  |f| %>

    <div class="section section-full-screen section-signup miniback">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="card card-signup login_card">
              <form class="form" method="" action="">
                <div class="header header-primary text-center">
                  <h2>CoachAI</h2>
                  <h4>Modifica <%= resource_name.to_s.humanize %></h4>

                </div>

                <h3>Cancel my account</h3>

                <p>Unhappy? <%= button_to "Cancel my account", coach_user_registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

                <%= link_to "Back", :back %>


                <p class="text-divider">Tutti i campi richiesti *</p>
                <div class="content">
                  <div class="input-group login_group">
										<span class="input-group-addon">
										<i class="material-icons">brightness_6</i>
										</span>
                    <%= f.text_field :first_name, autofocus: true, class: 'mdl-textfield__input form-control',
                                     placeholder: 'Nome...',
                                     for: 'login' %>
                  </div>

                  <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">brightness_5</i>
										</span>
                    <%= f.text_field :last_name, class: 'mdl-textfield__input form-control', placeholder: 'Cognome...',
                                     for: 'login' %>
                  </div>
                  <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">email</i>
										</span>
                    <%= f.email_field :email, class: 'mdl-textfield__input form-control', placeholder: 'Email...',
                                      for: 'login' %>
                  </div>


                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>


                  <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">lock_outline</i>
										</span>
                    <%= f.password_field :password,autocomplete: 'off', class: 'mdl-textfield__input form-control',placeholder: 'Password...', for: 'password' %><i>(lascia vuoto se non vuoi cambiarlo)</i><br />
                    <% if @minimum_password_length %>
                      <br />
                      <em><%= @minimum_password_length %> caratteri minimi</em>
                    <% end %>
                  </div>

                  <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">vpn_key</i>
										</span>
                    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'mdl-textfield__input form-control',
                                         placeholder: 'Conferma password...', for: 'password' %>
                  </div>
                  <div class="input-group login_group">
										<span class="input-group-addon">
										<i class="material-icons">face</i>
										</span>
                    <%= f.file_field :avatar, class: 'mdl-textfield__input form-control'%>
                    <% if current_coach_user.avatar? %>
                      <%= image_tag current_coach_user.avatar.url(:thumb) %>
                    <% end %>
                  </div>
                  <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">network_locked</i>
										</span>
                    <%= f.password_field :current_password, autocomplete: 'off', class: 'mdl-textfield__input
                    form-control',placeholder: 'Password attuale...', for: 'password' %><i>(Abbiamo bisogno della tua password corrente per confermare le tue modifiche)</i><br />
                  </div>
                </div>

                <div class="footer text-center actions">
                  <%= f.submit "Update", class: 'btn btn-success btn-lg' %>
                </div>
              </form>
            </div>

          </div>
        </div>
      </div>

    </div>


  <% end %>



















