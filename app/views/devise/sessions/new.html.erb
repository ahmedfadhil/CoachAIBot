

<div class="section">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center">
      </div>
    </div>
  </div>
</div>
<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="section ">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="card card-signup">
            <form class="form" method="" action="">
              <div class="header header-primary text-center">
                <h4>Login</h4>

              </div>
              <p class="text-divider">Tutti i campi richiesti *

              </p>
              <div class="content">



                <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">email</i>
										</span>
                  <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input form-control', placeholder:'Email...',
                                    for: 'login' %>
                </div>

                <div class="input-group login_group">
										<span class="input-group-addon">
											<i class="material-icons">lock_outline</i>
										</span>

                  <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'mdl-textfield__input form-control',
                                       placeholder:'Password...', for: 'password' %>
                </div>

                <!--<div class="input-group login_group">-->
										<!--<span class="input-group-addon">-->
									<!--<i class="material-icons">vpn_key</i>-->
										<!--</span>-->
                  <!--<#%= f.text_field :access_code, class: 'mdl-textfield__input form-control', placeholder:
                  'Codice d\'accesso...', for: 'login' %>-->
                <!--</div>-->

                <% if devise_mapping.rememberable? %>
                  <div class="field checkme login_group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <!-- If you want to add a checkbox to this form, uncomment this code

                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="optionsCheckboxes" checked>
                    Subscribe to newsletter
                  </label>
                </div> -->
              </div>
              <div class="footer text-center">
                <%= f.submit "Log in", class: 'btn btn-success btn-lg' %>
              </div>
              <div class="col-md-12 text-center">
                <p>Non hai un account? <a> <%= link_to "Iscriviti qui", new_coach_user_registration_path,class: "btn
              btn-info btn-sm"%></a></p>
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
      <div class="mdl-color-text--primary" style="float: right">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<%end %>

<div class="col-md-12 text-center">
  <a href="examples/signup-page.html" class="btn btn-simple btn-primary btn-lg" target="_blank">View Signup Page</a>
</div>

